@model IEnumerable<AdminCartItemDetailsDto>

@{
    ViewData["Title"] = "Index";
    Layout = "_SearchLayout";
}

<div class="table-responsive">
<table class="table table-striped">
    <thead>
        <tr>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.ProductId)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.SubmitterId)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.SubmitterName)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.Count)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                <partial name="_AdminPanelSearchBarPartial" model="@nameof(AdminCartItemDetailsDto.ProductId)" />
            </td>
            <td>
                <partial name="_AdminPanelSearchBarPartial" model="@nameof(AdminCartItemDetailsDto.ProductName)" />
            </td>
            <td>
                <partial name="_AdminPanelSearchBarPartial" model="@nameof(AdminCartItemDetailsDto.UserId)" />
            </td>
            <td>
                <partial name="_AdminPanelSearchBarPartial" model="@nameof(AdminCartItemDetailsDto.UserName)" />
            </td>
            <td>
                <partial name="_AdminPanelSearchBarPartial" model="@nameof(AdminCartItemDetailsDto.SubmitterId)" />
            </td>
            <td>
                <partial name="_AdminPanelSearchBarPartial" model="@nameof(AdminCartItemDetailsDto.SubmitterName)" />
            </td>
            <td>
                <partial name="_AdminPanelSearchBarPartial" model="@nameof(AdminCartItemDetailsDto.Count)" />
            </td>
            <td>
            </td>
        </tr>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId) 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName) 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubmitterId) 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubmitterName) 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Count) 
            </td>
            <td>
                <form asp-action="Edit">
                    <input type="hidden" name="@nameof(AdminCartItemCreateDto.UserId)" asp-for="@item.UserId" value="@item.UserId"/>
                    <input type="hidden" name="@nameof(AdminCartItemCreateDto.ProductId)" asp-for="@item.ProductId" value="@item.ProductId"/>
                    <input name="@nameof(CartItemDetailsDto.Count)" asp-for="@item.Count" value="@item.Count" />
                    <span asp-validation-for="@item.Count" class="text-danger"></span>
                    <input type="submit" value="Update" class="btn btn-secondary btn-sm" />
                </form>
                <form asp-action="Delete">
                    <input type="hidden" name="@nameof(AdminCartItemCreateDto.UserId)" asp-for="@item.UserId" value="@item.UserId"/>
                    <input type="hidden" name="@nameof(AdminCartItemCreateDto.ProductId)" asp-for="@item.ProductId" value="@item.ProductId"/>
                    <input type="submit" value="Delete" class="btn btn-danger btn-sm" />
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
</div>
