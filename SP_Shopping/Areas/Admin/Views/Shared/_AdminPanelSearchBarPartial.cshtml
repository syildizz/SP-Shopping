@model string

<search>
<form action="#" method="get" class="d-flex">
    <input type="search" name="query" aria-label="search" class="form-control me-sm-2" style="min-width: 5em;" />
    <input type="checkbox" name="sort" class="btn-check" id="@(Model)-sort-checkbox" autocomplete="off" value="true"/>
    <label class="btn btn-outline-secondary" for="@(Model)-sort-checkbox"><i class="bi my-bi-sort-checking"></i></label>
    <input type="hidden" name="type" value="@Model" />
    <button type="submit" class="btn btn-primary"><i class="bi bi-search"></i></button>
</form>
</search>
