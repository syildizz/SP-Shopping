@model IEnumerable<ProductDetailsDto>?

@{
    ViewData["Title"] = "Search";
}

<h1>Search</h1>

<div class="my-4">
    <partial name="_SearchFormPartial" model="@("Products", "Search", "query")"/>
</div>

@if (Model is null)
{
    <p>Please enter a non-empty search term.</p>
}
else if (Model.Count() <= 0)
{
    <p>No search result found.</p> 
}
else
{
@*     <table class="table">
        <partial name="_ProductIndexTableItemsPartial" />
    </table> 
*@
    <partial name="_ProductsGridPartial" model="Model" />
}
