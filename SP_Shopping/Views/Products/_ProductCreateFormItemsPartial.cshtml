
@{
    IEnumerable<SelectListItem> categorySelectList = ViewBag.categorySelectList;
}

@model ProductCreateDto

<div class="form-group">
    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Price" class="control-label"></label>
    <input asp-for="Price" class="form-control" />
    <span asp-validation-for="Price" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="CategoryId" class="control-label"></label>
    <select asp-for="CategoryId" asp-items="@categorySelectList" class="form-select sm"></select>
</div>
<div class="form-group">
    <label asp-for="SubmitterName" class="control-label"></label>
    <input asp-for="SubmitterName" class="form-control" />
    <span asp-validation-for="SubmitterName" class="text-danger"></span>
</div>
